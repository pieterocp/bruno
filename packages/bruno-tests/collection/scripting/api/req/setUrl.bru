meta {
  name: setUrl
  type: http
  seq: 2
}

get {
  url: {{host}}/ping/invalid
  body: none
  auth: none
}


assert {
  res.status: eq 200
  res.body: eq pong
}

script:pre-request {
  req.setUrl("http://localhost:8081/ping");
}

tests {
  test("req.setUrl()", function() {
    const url = req.getUrl();
    expect(url).to.equal("http://localhost:8081/ping");
  });
}